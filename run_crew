#!/usr/bin/env python3
"""
Script to run the Maffb crew with all tools and tasks.
"""

import sys
import os

# Add the src directory to the path
sys.path.insert(0, os.path.join(os.path.dirname(__file__), 'src'))

from maffb.main import run

if __name__ == "__main__":
    print("🚀 Starting Maffb crew with enhanced tools...")
    print("📝 New features: Markdown formatting and README updates")
    print("=" * 60)
    
    try:
        result = run()
        print("\n✅ Crew execution completed successfully!")
        print(f"📊 Result: {result}")
        sys.exit(0)  # Explicitly exit with success code
    except Exception as e:
        print(f"\n❌ Crew execution failed: {e}")
        sys.exit(1)
